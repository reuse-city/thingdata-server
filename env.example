# ThingData Server Environment Configuration

# Database
DATABASE_URL=postgresql://thingdata:thingdata@db:5432/thingdata

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO

# API Settings
API_TITLE="ThingData Server"
API_DESCRIPTION="ThingData Protocol v1.0 Implementation"
API_VERSION="0.1.2"
API_HOST=0.0.0.0
API_PORT=8000

# Security
# Generate a secret key with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Backup
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# Federation (for future use)
FEDERATION_ENABLED=false
INSTANCE_NAME=your-instance-name
INSTANCE_DESCRIPTION="Your instance description"

# Resources
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,svg

# Development Settings
# Uncomment and modify for development environment
#ENVIRONMENT=development
#LOG_LEVEL=DEBUG
#RELOAD=true
